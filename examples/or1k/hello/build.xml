<project name="hello" default="hello">
    <import name="ppci.build.buildtasks" />

    <target name="hello">
        <assemble
            source="../crt0.asm"
            arch="or1k"
            output="boot.oj" />
        <compile
            arch="or1k" optimize="2"
            sources="../../src/hello/hello.c3;../../../librt/io.c3;../bsp.c3"
            output="rest.oj"
            report="report.html"/>
        <link
            output="hello.oj"
            layout="../layout.mmp"
            objects="boot.oj;rest.oj" />
        <objcopy objectfile="hello.oj"
            imagename="flash"
            format="bin"
            output="hello.bin" />
    </target>
</project>
