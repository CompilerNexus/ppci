
<project name="hello" default="hello">
    <import name="ppci.buildtasks" />

    <target name="hello">
        <assemble
            arch="avr"
            debug="true"
            source="../glue.asm"
            output="glue.oj" />

        <compile
            arch="avr"
            sources="../../src/hello/hello.c3;../../../librt/io.c3;../bsp.c3"
            debug="true"
            output="rest.oj"
            optimize="2"
            report="report.html"/>
        <link
            output="hello.oj"
            layout="../avr.mmap"
            objects="glue.oj;rest.oj"
            debug="true" />
        <objcopy
            objectfile="hello.oj"
            imagename="flash"
            format="hex"
            output="hello.hex" />
    </target>

</project>

